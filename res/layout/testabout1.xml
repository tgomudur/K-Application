<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true" >

    <com.fourmob.panningview.PanningView
        android:id="@+id/panningView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/hulk"
        custom:panningDurationInMs="25000" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="15dp"
        android:orientation="vertical"
        android:weightSum="3" >

        <!--
        <ImageView
            android:id="@+id/ivKabout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#88000000"
            android:padding="5dp"
            android:scaleType="center"
            android:src="@drawable/klogo" >
        </ImageView>
        -->

        <LinearLayout
            android:id="@+id/colors"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_gravity="center"
            android:layout_marginBottom="8dip"
            android:layout_marginLeft="4dip"
            android:layout_marginRight="4dip"
            android:layout_marginTop="10dp"
            android:background="#00000000"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="5dp" >

            <ImageView
                android:id="@+id/iv1"
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginBottom="5dip"
                android:layout_marginLeft="5dip"
                android:layout_marginTop="5dip"
                android:src="@drawable/icabout1"
                android:onClick="onImageClicked" />

            <ImageView
                android:id="@+id/iv2"
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginBottom="5dip"
                android:layout_marginLeft="5dip"
                android:layout_marginTop="5dip"
                android:src="@drawable/icabout2"
                android:onClick="onImageClicked" />

            <ImageView
                android:id="@+id/iv3"
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginBottom="5dip"
                android:layout_marginLeft="5dip"
                android:layout_marginTop="5dip"
                android:src="@drawable/icabout3"
                android:onClick="onImageClicked" />
        </LinearLayout>

        <TextView
            android:id="@+id/tvDesc1	"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:layout_weight="0.5"
            android:background="#44000000"
            android:gravity="center"
            android:padding="5dp"
            android:text="WORKSHOPS"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#AAffffff"
            android:textStyle="bold" >
        </TextView>

        <TextView
            android:id="@+id/tvDesc2	"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:layout_weight="0.5"
            android:background="#00000000"
            android:gravity="center"
            android:padding="5dp"
            android:text="For those who crave excellence"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#AAffffff" >
        </TextView>
         <TextView
            android:id="@+id/tvProceed	"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:layout_weight="0.5"
            android:background="@drawable/roundedtextview"
            android:gravity="center"
            android:padding="5dp"
            android:text="===CLICK TO PROCEED==>"
            android:clickable="true"
             android:onClick="onImageClicked"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#AAffffff" >
        </TextView>
         <TextView
            android:id="@+id/tvDev	"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:layout_weight="0.5"
            android:background="#44000000"
            android:gravity="center"
            android:padding="5dp"
            android:text="DEVELOPERS"
     
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#AAffffff" >
        </TextView>
         <TextView
            android:id="@+id/tvDevTharun	"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:layout_weight="0.5"
            android:background="#00000000"
            android:gravity="center"
            android:padding="5dp"
            android:text="Tharun Niranjan"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#AAffffff" >
        </TextView>
        <TextView
            android:id="@+id/tvDevKarthi	"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:layout_weight="0.5"
            android:background="#00000000"
            android:gravity="center"
            android:padding="5dp"
            android:text="KarthiKeyan K"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#AAffffff" >
        </TextView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:weightSum="5"
        android:layout_margin="5dp" >
    

    <EditText
        android:id="@+id/etEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_weight="4.95"
        android:ems="10"
        android:inputType="textMultiLine" 
        android:hint="Give us your valuable feedback">
            <requestFocus />
    </EditText>

        <ImageButton
            android:id="@+id/ibSend"
            android:layout_width="40dp"
            android:layout_height="40dp" 
            android:layout_weight="0.05"
            android:scaleType="centerCrop"
            android:background="#00000000"
            android:layout_marginRight="5dp"
            android:src="@drawable/megaphone2"
            android:layout_gravity="bottom|right"
            android:onClick="onImageClicked"
            >
        </ImageButton>

    </LinearLayout>

</FrameLayout>