<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    android:clickable="false">

    <com.fourmob.panningview.PanningView
        android:id="@+id/panningView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
      android:src="@drawable/hulk"
        custom:panningDurationInMs="25000" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:orientation="vertical"
        android:weightSum="3" 
        android:layout_gravity="center">

       <!--  <ImageView
            android:id="@+id/ivKabout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#88000000"
            android:padding="5dp"
            android:scaleType="center"
            android:src="@drawable/klogo" >
        </ImageView>
       --> 
        <LinearLayout
            android:id="@+id/colors"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginBottom="8dip"
            android:layout_marginLeft="4dip"
            android:layout_marginRight="4dip"
            android:layout_marginTop="10dp"
            android:background="#00000000"
            android:orientation="horizontal"
            android:padding="5dp" >

            <ImageView
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:id="@+id/iv1"
                android:layout_marginBottom="5dip"
                android:layout_marginLeft="5dip"
                android:layout_marginTop="5dip"
               
                android:src="@drawable/icabout1" />

            <ImageView
                 android:id="@+id/iv2"
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginBottom="5dip"
                android:layout_marginLeft="5dip"
                android:layout_marginTop="5dip"
               
                android:src="@drawable/icabout2" />

            <ImageView
                 android:id="@+id/iv3"
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
               android:layout_marginBottom="5dip"
                android:layout_marginLeft="5dip"
                android:layout_marginTop="5dip"
               
                android:src="@drawable/icabout3" />
        </LinearLayout>

            <TextView 
                    android:id="@+id/tvDesc1	"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:layout_weight="0.5"
                android:background="#44000000"
                android:padding="5dp"
                android:gravity="center"
                android:text="WORKSHOPS"
                android:textStyle="bold"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="#AAffffff" ></TextView>

            <TextView
                android:id="@+id/tvDesc2	"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:layout_weight="0.5"
                android:background="#00000000"
                android:padding="5dp"
                android:gravity="center"
                android:text="For those who crave excellence"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="#AAffffff" >
            </TextView>
            <TextView
                android:id="@+id/tvDescref	"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:layout_weight="0.5"
                android:background="#00000000"
                android:padding="5dp"
                android:gravity="center"
                android:text="Swipe >"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="#AAffffff" >
            </TextView>
      
    </LinearLayout>

</FrameLayout>